#!/usr/bin/env bash

CLUSTER_NAME=local

printf "\n== Deleting existing kind cluster ==\n\n"

kind delete cluster -n $CLUSTER_NAME

printf "\n== Creating new kind cluster ==\n\n"

cat <<HEREDOC | ctlptl apply -f -
apiVersion: ctlptl.dev/v1alpha1
kind: Registry
name: ctlptl-registry
port: 20021
---
apiVersion: ctlptl.dev/v1alpha1
kind: Cluster
product: kind
registry: ctlptl-registry
kindV1Alpha4Cluster:
  name: $CLUSTER_NAME
  networking:
    apiServerPort: 20022
  nodes:
    - role: control-plane
HEREDOC
